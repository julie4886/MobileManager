<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/title_vertical_margin"
    android:gravity="center_vertical"
    android:background="@color/title_color">

    <ImageView
        android:id="@+id/icon_top_back"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:padding="20dp"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_centerVertical="true"
        android:layout_gravity="left|center_vertical"
        android:background="@drawable/topbar_lostfind"
       />

    <TextView
        android:id="@+id/tv_appmanager_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="进程控制"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/icon_top_back"
        android:layout_toEndOf="@+id/icon_top_back" />

    <TextView
        android:id="@+id/tv_clear"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:text="一键清理"
        android:gravity="center"
        android:textColor="#ff0000" />

</RelativeLayout>